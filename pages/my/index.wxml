<!--index.wxml-->
<view class="container">
  <view bindtap="bindViewTap" class="userinfo">
    <!-- <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image> -->
    <view class="userinfo-avatar">
      <open-data type="userAvatarUrl" background-size="cover" class=""></open-data>
    </view>
    <open-data type="userNickName"></open-data>
    <!-- <text class="userinfo-nickname"></text> -->
  </view>
  <view class="info_list">
    <!-- <block wx:for="{{userListInfo}}" wx:key="key"> -->
    <!--我的订单开始-->
    <view class="weui-cells weui-cells_after-title">
      <navigator url="order/index" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__hd">
          <image src="../../images/iconfont-dingdan.png" style="margin-right: 5px;vertical-align: middle;width:22px; height: 24px;"></image>
        </view>
        <view class="weui-cell__bd">我的订单</view>
        <view class="weui-cell__ft weui-cell__ft_in-access" style="font-size: 0">
          <!-- <view class="weui-badge weui-badge_dot" style="margin-left: 5px;margin-right: 5px;"></view> -->
        </view>
      </navigator>
    </view>
    <!--我的订单结束-->
    <!--我的收货地址开始-->
    <view class="weui-cells weui-cells_after-title">
      <navigator url="address/index" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__hd">
          <image src="../../images/iconfont-shouhuodizhi.png" style="margin-right: 5px;vertical-align: middle;width:22px; height: 24px;"></image>
        </view>
        <view class="weui-cell__bd">收货地址管理</view>
        <view class="weui-cell__ft weui-cell__ft_in-access" style="font-size: 0">
        </view>
      </navigator>
    </view>
    <!--我的收货地址结束-->
    <!--我的表单开始-->
    <view class="weui-cells weui-cells_after-title">
      <navigator url="form/index" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__hd">
          <image src="../../images/icon_normal.png" style="margin-right: 5px;vertical-align: middle;width:24px; height: 26px;"></image>
        </view>
        <view class="weui-cell__bd">我的表单</view>
        <view class="weui-cell__ft weui-cell__ft_in-access" style="font-size: 0">
        </view>
      </navigator>
    </view>
    <!--我的表单结束-->
    <!--联系客服开始-->
    <view class="weui-cells weui-cells_after-title">
      <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__hd">
          <image src="../../images/iconfont-kefu.png" style="margin-right: 5px;vertical-align: middle;width:22px; height: 24px;"></image>
        </view>
        <view class="weui-cell__bd" bindtap='call'>联系客服</view>
      </navigator>
    </view>
    <!--联系客服结束-->
    <!--关于我开始-->
    <view class="weui-cells weui-cells_after-title">
      <navigator url="about/index" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__hd">
          <image src="../../images/info.png" style="margin-right: 5px;vertical-align: middle;width:22px; height: 20px;"></image>
        </view>
        <view class="weui-cell__bd">关于店铺</view>
        <view class="weui-cell__ft weui-cell__ft_in-access" style="font-size: 0">
        </view>
      </navigator>
    </view>
    <!--关于我结束-->
  </view>
</view>