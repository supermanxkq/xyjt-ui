<view class="container">
  <block wx:for="{{list}}">
    <navigator url="../details/index?id={{item.id}}">
      <view class="brand_item">

        <image src="{{item.goodspics}}" class="pic"></image>
        <view class="right_cont">
          <text class="country">{{item.title}}</text>
          <view class="price">
            <text class="ourprice">￥{{item.ourprice}}.00</text>
            <!-- <text class="discount">8折</text>
            <text class="marketprice">{{item.marketprice}}.00</text> -->
          </view>
          <text class="name">{{item.country}}条评价   {{item.bigname}}好评</text>
        </view>
      </view>
    </navigator>
  </block>
</view>