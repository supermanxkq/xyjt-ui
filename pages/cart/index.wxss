/********/
page {
  background: #fff;
  font-size: 14px;
}

.container .brand_item {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 5px 0;
  /**border-top: 1px solid #e4e4e4;*/
  border-bottom: 1px solid #e4e4e4;
}

.container .brand_item .pic {
  display: block;
  width: 100px;
  height: 100px;
}

.right_cont {
  flex: 1;
  padding-right: 10px;
}

.right_cont .country {
  display: block;
  color: black;
}

.price {
  margin: 10px 0px 0px 0px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  color: #333;
}

.right_cont .name {
  /* margin: 10px 0; */
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  color: rgb(190, 187, 187);
  font-size: 12px;
}

.right_cont .ourprice {
  color: #f70202;
  font-weight: bold;
}

.right_cont .discount {
  height: 16px;
  line-height: 16px;
  margin: 0 10px;
  padding: 1px 6px 1px 10px;
  /* background: url(http://www.huanqiuxiaozhen.com/assets/images/discount-bg.png) no-repeat center; */
  background-size: cover;
  color: rgb(235, 27, 27);
  font-size: 12px;
}

.right_cont .marketprice {
  text-decoration: line-through;
  color: #939393;
}

.addAddressBtn {
  position: fixed;
  bottom: 0;
  width: 100%;
}
